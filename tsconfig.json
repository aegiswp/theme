{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "lib": ["DOM", "ES6"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "outDir": "build", // Align with Webpack's output
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utility/*"]
    },
    "skipLibCheck": true // Optional: Speed up builds
  },
  "include": ["src"],
  "exclude": ["build", "node_modules", "vendor"]
}