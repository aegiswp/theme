{
  "name": "aegis",
  "description": "Aegis is a sleek theme that promises agility and a lightweight design. It features elegant animations that add a sophisticated touch without hindering performance. The theme comes with a diverse array of block patterns, including full-page layouts, to ensure precise design control. Its latest full site editing capability facilitates real-time customization. With a solid foundation for ecommerce, it is well-suited for blogging, media outlets, and academic publishing.",
  "author": "Atmostfear Entertainment",
  "license": "GPL-2.0-or-later",
  "main": "src/index.tsx",
  "exports": {
    "./components": "./src/components",
    "./utility": "./src/utility"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/atmostfear-entertainment/aegis.git"
  },
  "bugs": {
    "url": "https://github.com/atmostfear-entertainment/aegis/issues"
  },
  "homepage": "https://github.com/atmostfear-entertainment/aegis/",
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "css": "npm run build:css",
    "js": "npm run build:js",
    "pot": "wp-scripts i18n make-pot . languages/aegis.pot --exclude=tests,vendor,node_modules,assets",
    "build": "npm run js && npm run css && npm run pot",
    "build:js": "wp-scripts build --output-path=assets/js",
    "build:css": "rimraf assets/css && sass --style=compressed src/scss:assets/css --no-source-map",
    "start": "npm run start:css && npm run start:js",
    "start:js": "wp-scripts start --output-path=assets/js",
    "start:css": "sass --watch --style=compressed src/scss:assets/css --no-source-map",
    "lint": "npm run lint:css && npm run lint:js",
    "lint:css": "wp-scripts lint-style 'src/scss'",
    "lint:js": "wp-scripts lint-js 'src/**/*.tsx'",
    "fix:css": "wp-scripts lint-style 'src/scss' --fix",
    "fix:js": "wp-scripts lint-js 'src/**/*.tsx' --fix",
    "test": "jest --verbose ./tests/js/*.js",
    "format": "prettier --write 'src/**/*.{js,ts,tsx,scss}'",
    "zip": "rimraf ../../aegis.zip && zip -r ../../aegis.zip assets/ includes/ languages/ parts/ patterns/ styles/ templates/ functions.php index.php readme.txt screenshot.png style.css theme.json"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.4",
    "@babel/preset-typescript": "^7.24.7",
    "@types/redux": "^3.6.31",
    "@types/wordpress__block-editor": "^11.5.15",
    "@types/wordpress__components": "^23.8.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@wordpress/api-fetch": "^7.6.0",
    "@wordpress/block-editor": "^14.1.0",
    "@wordpress/blocks": "^13.6.0",
    "@wordpress/components": "^28.6.0",
    "@wordpress/compose": "^7.6.0",
    "@wordpress/data": "^10.6.0",
    "@wordpress/dom-ready": "^4.6.0",
    "@wordpress/element": "^6.6.0",
    "@wordpress/eslint-plugin": "^20.3.0",
    "@wordpress/hooks": "^4.6.0",
    "@wordpress/i18n": "^5.6.0",
    "@wordpress/icons": "^10.6.0",
    "@wordpress/primitives": "^4.6.0",
    "@wordpress/scripts": "^28.6.0",
    "browser-sync-webpack-plugin": "^2.3.0",
    "cross-env": "^7.0.3",
    "draggabilly": "^3.0.0",
    "eslint": "^9.9.1",
    "eslint-plugin-react": "^7.35.0",
    "html-react-parser": "^5.1.15",
    "jest": "^29.7.0",
    "packery": "^2.1.2",
    "prettier": "^3.3.3",
    "prism-themes": "^1.9.0",
    "prismjs": "^1.29.0",
    "react": "^18.3.1",
    "react-select": "^5.8.0",
    "react-simple-code-editor": "^0.14.1",
    "redux": "^5.0.1",
    "rimraf": "^6.0.1",
    "sass": "^1.77.8",
    "stylelint": "^14.16.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "webpack-merge": "^6.0.1"
  },
  "version": "1.0.0",
  "keywords": [
    "WordPress",
    "block theme",
    "full-site editing",
    "ecommerce",
    "responsive design",
    "animations",
    "Gutenberg blocks"
  ]
}
