{
  "name": "atmostfear-entertainment/aegis",
  "version": "1.0.0",
  "description": "Aegis is a sleek theme that promises agility and a lightweight design. It features elegant animations that add a sophisticated touch without hindering performance. The theme comes with a diverse array of block patterns, including full-page layouts, to ensure precise design control. Its latest full site editing capability facilitates real-time customization. With a solid foundation for ecommerce, it is well-suited for blogging, media outlets, and academic publishing.",
  "license": "GPL-2.0-or-later",
  "type": "wordpress-theme", 
  "homepage": "https://github.com/atmostfear-entertainment/aegis/",
  "support": {
    "issues": "https://github.com/atmostfear-entertainment/aegis/issues"
  },
  "keywords": [
    "aegis",
    "theme",
    "wordpress",
    "fse",
    "blocks",
    "wp"
  ],
  "authors": [
    {
      "name": "Aegis",
      "homepage": "https://github.com/atmostfear-entertainment/aegis/"
    }
  ],
  "minimum-stability": "dev",
  "scripts": {
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "install:dev": "composer install",
    "install:prod": "composer install --no-dev",
    "phpcs": "phpcs -s",
    "phpcbf": "phpcbf",
    "phpstan": "phpstan --memory-limit=1G",
    "pest": "pest"
  },
  "config": {
    "allow-plugins": {
      "composer/installers": true,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "pestphp/pest-plugin": true
    },
    "sort-packages": true
  },
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "composer/installers": "^2.0",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
    "dingo-d/wp-pest": "^1.6",
    "mockery/mockery": "^1.7",
    "php-parallel-lint/php-parallel-lint": "^1.3",
    "phpstan/phpstan": "^1.9",
    "phpunit/phpunit": "^9.6",
    "szepeviktor/phpcs-psr-12-neutron-hybrid-ruleset": "^0.6.1",
    "szepeviktor/phpstan-wordpress": "^1.0",
    "wp-coding-standards/wpcs": "^2.3"
  },
  "autoload": {
    "psr-4": {
      "AtmostfearEntertainment\\Aegis\\": "src/"
    },
    "files": [
      "functions.php"
    ]
  }
}